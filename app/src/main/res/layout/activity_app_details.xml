<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activities.AppDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_marginTop="@dimen/margin_2.5"
                android:paddingStart="@dimen/margin_2.5"
                android:paddingEnd="@dimen/margin_2.5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingEnd="@dimen/margin_12">

                    <TextView
                        android:id="@+id/name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:text="@string/application"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_22"
                        style="@style/MediumBoldText"/>

                    <TextView
                        android:id="@+id/package_name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_12"
                        android:text="@string/package_name"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_20"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/plexus_text"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:padding="@dimen/margin_6.5"
                            android:background="@drawable/shape_outline"
                            android:text="@string/app_name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_16"/>

                        <TextView
                            android:id="@+id/plexus_version_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version"
                            android:textColor="?colorControlNormal"
                            android:textSize="@dimen/text_18"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/installed_ver_layout"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_12">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_6.5"
                            android:background="@drawable/shape_outline"
                            android:text="@string/installed"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_16"/>

                        <TextView
                            android:id="@+id/installed_version_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:text="@string/version"
                            android:textColor="?colorControlNormal"
                            android:textSize="@dimen/text_18"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/divider_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card_with_ripple"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_8">

            <TextView
                android:id="@+id/dg_text"
                style="@style/MediumBoldText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_bg_top"
                android:backgroundTint="@color/ratingXColor"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/de_Googled"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18" />

            <ImageView
                android:id="@+id/dg_badge_details"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/margin_35"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_12"
                android:background="@drawable/shape_bg_circle"
                android:contentDescription="@string/not_tested_title"
                android:padding="6dp"
                android:src="@drawable/ic_badge"
                app:tint="@color/ratingXColor" />

            <TextView
                android:id="@+id/dg_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dg_text"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_12"
                android:text="@string/notes"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_18" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card_with_ripple"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_8">

            <TextView
                android:id="@+id/mg_text"
                style="@style/MediumBoldText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_bg_top"
                android:backgroundTint="@color/ratingXColor"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/microG"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18" />

            <ImageView
                android:id="@+id/mg_badge_details"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/margin_35"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_12"
                android:background="@drawable/shape_bg_circle"
                android:contentDescription="@string/not_tested_title"
                android:padding="6dp"
                android:src="@drawable/ic_badge"
                app:tint="@color/ratingXColor" />

            <TextView
                android:id="@+id/mg_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mg_text"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_12"
                android:text="@string/notes"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_18" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_45"
            android:layout_marginBottom="@dimen/margin_12"
            android:text="NOTE: \n\nTop half of this screen will be redesigned later to accommodate multiple versions.\n\nHaven't really thought of anything yet."
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_18"/>

    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        app:navigationIcon="@drawable/ic_close"
        android:backgroundTint="@color/bottomSheetColor"
        app:fabCradleMargin="@dimen/margin_10"
        app:fabCradleRoundedCornerRadius="@dimen/margin_16"
        app:fabAlignmentMode="end"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_fab"
        app:fabCustomSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/bottom_app_bar"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_edit"
        app:tint="@android:color/white"
        android:contentDescription="Update/Submit" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>