<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:orientation="vertical"
    android:layout_gravity="center">

    <include
        layout="@layout/bottom_sheet_header"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_8"
        layout="@layout/divider_horizontal"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/alphabetical"
                style="@style/MediumBoldText"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_control_normal"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/my_ratings_alphabetical_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_8"
                app:chipSpacingHorizontal="@dimen/margin_10"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_a_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/a_z"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_z_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/z_a"/>

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_12"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/my_ratings_version_dropdown_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/version"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_12"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/my_ratings_rom_dropdown_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/rom"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginEnd="@dimen/margin_12"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/my_ratings_android_dropdown_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/android"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/installed_from"
                style="@style/MediumBoldText"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_control_normal"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/my_ratings_installed_from_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_8"
                app:chipSpacingHorizontal="@dimen/margin_10"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_chip_installed_any"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/any"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_chip_installed_google_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/google_play"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_chip_installed_fdroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/fdroid"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_chip_installed_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NotTestedFilterChipTheme"
                    android:text="@string/other"/>

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:text="@string/status"
                style="@style/MediumBoldText"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_control_normal"/>

            <RadioGroup
                android:id="@+id/my_ratings_status_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_4"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/shape_outline">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/my_ratings_radio_any_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:layout_margin="@dimen/margin_4"
                    android:background="@drawable/shape_radio_btn_selector"
                    android:checked="true"
                    android:button="@android:color/transparent"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingEnd="@dimen/margin_16"
                    android:text="@string/any"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/radio_btn_text_color"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/my_ratings_radio_dg_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:layout_margin="@dimen/margin_4"
                    android:background="@drawable/shape_radio_btn_selector"
                    android:button="@android:color/transparent"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingEnd="@dimen/margin_16"
                    android:text="@string/de_Googled"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/radio_btn_text_color"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/my_ratings_radio_mg_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_40"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingEnd="@dimen/margin_16"
                    android:layout_margin="@dimen/margin_4"
                    android:button="@android:color/transparent"
                    android:background="@drawable/shape_radio_btn_selector"
                    android:text="@string/microG"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/radio_btn_text_color"/>

            </RadioGroup>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/my_ratings_status_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_4"
                app:chipSpacingHorizontal="@dimen/margin_10"
                app:chipSpacingVertical="@dimen/margin_4"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_any"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/any"
                    android:checked="true"
                    style="@style/NotTestedFilterChipTheme"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_broken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BrokenFilterChipTheme"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_bronze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BronzeFilterChipTheme"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SilverFilterChipTheme"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/my_ratings_sort_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/GoldFilterChipTheme"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/divider_horizontal"/>

    <include
        layout="@layout/bottom_sheet_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"/>

</LinearLayout>