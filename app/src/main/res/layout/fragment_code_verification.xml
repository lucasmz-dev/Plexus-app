<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/margin_20"
    android:gravity="center">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:drawableStart="@drawable/ic_otp"
        android:drawablePadding="@dimen/margin_12"
        android:text="@string/enter_code_sent_to_email"
        android:textSize="@dimen/text_18"
        android:textColor="@color/color_onSurface"
        style="@style/MediumBoldText"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_12"
        android:textColorHint="@color/color_hint"
        app:errorEnabled="true"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/codeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/verification_code"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/color_onSurface"
        android:textSize="@dimen/text_16"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/doneButton"
        android:layout_width="180dp"
        android:layout_height="55dp"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/margin_8"
        app:iconTint="@color/btn_text_color"
        android:text="@string/done"
        android:textColor="@color/btn_text_color"
        android:enabled="false"
        style="@style/PositiveButtonStyle"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/infoAnim"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_8"
        android:scaleX="1.8"
        android:scaleY="1.8"
        app:lottie_rawRes="@raw/lottie_progress_indicator"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verifying_code"
        android:textSize="@dimen/text_16"
        android:textColor="@color/color_control_normal"
        android:textAlignment="center"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>