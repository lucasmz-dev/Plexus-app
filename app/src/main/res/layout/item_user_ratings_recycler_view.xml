<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_6.5"
    android:paddingStart="@dimen/margin_8"
    android:paddingEnd="@dimen/margin_8"
    android:paddingTop="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_12"
    android:background="@drawable/shape_card"
    tools:context=".adapters.details.UserRatingsItemAdapter">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ratings_dg_mg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_4"
        android:text="@string/de_Googled"
        android:textAlignment="viewStart"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_17"
        style="@style/MediumBoldText"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ratings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ratings_dg_mg_text"
        app:layout_constraintTop_toTopOf="@id/ratings_dg_mg_text"
        app:layout_constraintBottom_toBottomOf="@id/ratings_dg_mg_text"
        android:layout_marginStart="@dimen/margin_12"
        android:paddingStart="@dimen/margin_12"
        android:paddingEnd="@dimen/margin_12"
        android:paddingTop="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_4"
        android:background="@drawable/shape_card"
        android:backgroundTint="@color/color_gold_status"
        android:text="@string/gold_title"
        android:textAlignment="center"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_16"
        style="@style/MediumBoldText"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ratings_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratings_dg_mg_text"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        android:text="@string/version"
        android:textAlignment="viewStart"
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/text_17"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ratings_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ratings_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_6.5"
        android:text="@string/notes"
        android:textAlignment="viewStart"
        android:textColor="@color/color_control_normal"
        android:textSize="@dimen/text_17"/>

</androidx.constraintlayout.widget.ConstraintLayout>