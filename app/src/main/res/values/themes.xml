<resources>

    <!--Splash light theme-->
    <style name="SplashTheme" parent="BaseSplashStyle">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--#########################################################################################-->

    <!--App light theme-->
    <style name="AppTheme" parent="BaseAppStyle">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--#########################################################################################-->

    <!--Filter chips theme-->
    <style name="NotTestedFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:text">@string/na</item>
    </style>

    <style name="BrokenFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_broken_status</item>
        <item name="android:text">@string/broken_title</item>
    </style>

    <style name="BronzeFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_bronze_status</item>
        <item name="android:text">@string/bronze_title</item>
    </style>

    <style name="SilverFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_silver_status</item>
        <item name="android:text">@string/silver_title</item>
    </style>

    <style name="GoldFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_gold_status</item>
        <item name="android:text">@string/gold_title</item>
    </style>

    <style name="GooglePlayAltFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/google_play_alt</item>
    </style>

    <style name="FdroidFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/fdroid</item>
    </style>

    <style name="ApkFilterChipTheme" parent="BaseFilterChipStyle">
        <item name="chipBackgroundColor">@color/color_installed_from</item>
        <item name="android:text">@string/apk</item>
    </style>

    <style name="SystemDefaultChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_system_default</item>
        <item name="android:text">@string/follow_system</item>
    </style>

    <style name="LightChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_light</item>
        <item name="android:text">@string/light</item>
    </style>

    <style name="DarkChipTheme" parent="BaseThemeChipStyle">
        <item name="closeIcon">@drawable/ic_dark</item>
        <item name="android:text">@string/dark</item>
    </style>

    <!--#########################################################################################-->

    <!--Chip like text view themes-->
    <style name="InstalledFromTextViewTheme" parent="BaseChipLikeTextViewStyle">
        <item name="android:drawableTint">@color/color_onSurface</item>
        <item name="backgroundTint">@color/color_installed_from</item>
    </style>

    <style name="AndroidVersionTextViewTheme" parent="BaseChipLikeTextViewStyle">
        <item name="android:drawableStart">@drawable/ic_android_version</item>
        <item name="android:drawableTint">@color/color_onSurface</item>
        <item name="backgroundTint">@color/color_android_version</item>
    </style>

    <!--#########################################################################################-->

    <!--Bottom sheet theme-->
    <style name="BottomSheetTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:backgroundDimAmount">0.50</item>
        <item name="android:windowEnterAnimation">@anim/fade_in_slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_slide_to_bottom</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>