<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/details_app_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_gravity="center"
                android:src="@drawable/ic_apk"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"/>

            <TextView
                android:id="@+id/name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_2.5"
                android:paddingStart="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_16"
                android:text="@string/app_name"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_22" />

            <TextView
                android:id="@+id/package_name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginStart="@dimen/margin_17"
                android:layout_marginEnd="@dimen/margin_17"
                android:text="@string/package_name"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_17"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16">

                <TextView
                    android:id="@+id/plexus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginEnd="@dimen/margin_4"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_6.5"
                    android:paddingEnd="@dimen/margin_6.5"
                    android:background="@drawable/shape_outline"
                    android:text="@string/plexus"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/plexus_version_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="@string/version"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/installed_ver_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginStart="@dimen/margin_16"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_4"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_6.5"
                    android:paddingEnd="@dimen/margin_6.5"
                    android:background="@drawable/shape_outline"
                    android:text="@string/installed"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/installed_version_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_12"
                    android:text="@string/version"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_card"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_16"
                android:paddingTop="@dimen/margin_8"
                android:paddingBottom="@dimen/margin_8">

                <TextView
                    android:id="@+id/dg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_20"
                    android:gravity="center_vertical"
                    android:text="@string/de_Googled"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/text_18"
                    style="@style/MediumBoldText"
                    tools:ignore="RelativeOverlap"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_dg_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dg_text"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_2.5"
                    android:clickable="false"
                    style="@style/BrokenFilterChipTheme"/>

                <TextView
                    android:id="@+id/dg_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_dg_status"
                    android:layout_marginStart="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:text="@string/notes"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/text_18" />

                <include
                    layout="@layout/divider_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/dg_notes"
                    android:layout_margin="@dimen/margin_16"/>

                <TextView
                    android:id="@+id/mg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/divider"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_20"
                    android:gravity="center_vertical"
                    android:text="@string/microG"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/text_18"
                    style="@style/MediumBoldText"
                    tools:ignore="RelativeOverlap"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_mg_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/mg_text"
                    android:layout_below="@+id/divider"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_2.5"
                    android:clickable="false"
                    style="@style/GoldFilterChipTheme"/>

                <TextView
                    android:id="@+id/mg_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_mg_status"
                    android:layout_marginStart="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:text="@string/notes"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/text_18" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        app:navigationIcon="@drawable/ic_close"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/bottom_app_bar"
        android:src="@drawable/ic_edit"
        android:tintMode="@color/color_snackbar_text"
        android:backgroundTint="@color/color_fab"
        android:contentDescription="Update/Submit" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>